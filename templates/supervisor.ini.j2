[program:filebeat]
command={{ filebeat_install_dir }}/filebeat 
  -c {{ filebeat_config_dir }}/filebeat.yml
  -path.data {{ filebeat_data_dir }}
  -path.logs {{ filebeat_logs_dir }}
process_name=%(program_name)s
autostart=true
autorestart=true
user={{ filebeat_user }}
stderr_logfile={{ filebeat_logs_dir }}/%(program_name)s.stderr.log
stdout_logfile={{ filebeat_logs_dir }}/%(program_name)s.stdout.log

